{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "describe": true,
    "it": true,
    "expect": true,
    "sinon": true,
    "before": true,
    "after": true,
    "beforeEach": true,
    "afterEach": true
  },
  "extends": "airbnb",
  "plugins": [
    "react"
  ],
  "rules": {
    "new-cap": [0],
    "import/no-extraneous-dependencies": "off",
    "import/prefer-default-export": "off",
    "react/jsx-filename-extension": "off"
  }
}
